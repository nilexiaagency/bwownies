{% liquid
  assign product_variants = product.variants | sort: 'price'

  assign cart_value = cart.items_subtotal_price | times: 1.0
  assign free_shipping_threshold = settings.free_shipping_threshold | times: 100.0
  assign variant_price = product.selected_or_first_available_variant.price
  assign cart_value_plus_price = cart_value | plus: variant_price

  if cart_value >= free_shipping_threshold
    assign free_shipping_qualified = true
  elsif cart_value_plus_price >= free_shipping_threshold
    assign add_to_qualify = true
  else
    assign get_closer = true
  endif
%}

<div
  x-cloak
  x-init="
    (function(){
      if (!Alpine.store('stickyATC')) Alpine.store('stickyATC', { shown: true });
      else Alpine.store('stickyATC').shown = true;
    })()
  "
  x-show="$store.stickyATC && $store.stickyATC.shown && isMaxLgBreakpoint"
>
  <div class="sticky-atc" x-data="stickyForm" data-color-scheme="scheme3">
    {% render 'sticky-add-to-cart-free-delivery' %}

    {% form 'product',
      product,
      class: 'shopify-product-form',
      id: 'sticky-atc-form',
      data-product-form: '',
      x-ref: 'stickyForm'
    %}
      <div class="sticky-atc__form" @change="onStickyVariantChange">
        <div class="sticky-atc__variants">
          {% for variant in product_variants %}
            {% if variant.available %}
              <label for="Sticky-Cart-Option-{{ variant.id }}" class="sticky-atc__variant">
                <input
                  type="radio"
                  name="id"
                  value="{{ variant.id }}"
                  id="Sticky-Cart-Option-{{ variant.id }}"
                  {% if variant == product.selected_or_first_available_variant %}
                    checked
                  {% endif %}
                  data-price="{{ variant.price }}"
                  data-available="true"
                >
                <span class="sticky-atc__variant-title">{{ variant.title }}</span>
                <span class="sticky-atc__variant-price-per-item" x-ref="test">
                  {% assign money_string = variant.unit_price | money %}
                  {{-
                    'products.product.sticky_add_to_cart.per_item_price'
                    | t: price: money_string, unit: product.metafields.custom.unit_price_type
                  -}}
                </span>
              </label>
            {% endif %}
          {% endfor %}
        </div>
        <div class="sticky-atc__buttons">
          <button type="submit" class="add-to-cart-btn push-btn w-full">
            <span class="push-btn__surface push-btn__surface--secondary w-full">
              {{ 'products.product.add_to_cart' | t }}
              <span x-ref="variantPrice" class="add-to-cart-btn__price">{{ variant_price | money }}</span>
            </span>
          </button>
          {{ form | payment_button }}
        </div>
      </div>
    {% endform %}
  </div>
</div>

<script>
  document.addEventListener('alpine:init', () => {
    Alpine.data('stickyForm', () => ({
      shippingBarTexts: {
        getCloser: "{{ 'products.product.sticky_add_to_cart.free_shipping.get_closer_html' | t: price: '[[price]]' }}",
        addToQualify: "{{ 'products.product.sticky_add_to_cart.free_shipping.add_to_qualify' | t }}",
        qualified: "{{ 'products.product.sticky_add_to_cart.free_shipping.qualified' | t }}",
      },
      cartValue: {{ cart_value }},
      freeShippingThreshold: {{ free_shipping_threshold }},
      moneyFormat: {{ shop.money_format | json }},
      productRootEl: null,
      loading: false,
      cartAddErrorMessage: null,
      stickyVariantAvailable: {{ product.selected_or_first_available_variant.available | json }},

      init() {
        // Try to cache the main product root immediately so sticky interactions work first
        this.productRootEl =
          document.querySelector('data-island[data-product-root][x-data^=\"Product\" ]') ||
          document.querySelector('[data-product-root]') ||
          this.productRootEl;
        this.updateShippingBar();
        // Bind AJAX submit handler to this form
        if (this.$refs.stickyForm) {
          this.$refs.stickyForm.addEventListener('submit', this.submitStickyForm.bind(this));
        }
        // Sync with main product variant changes
        document.addEventListener('theme:variant:change', (e) => {
          const { productRootEl, variant } = e.detail || {};
          if (!variant) return;
          this.productRootEl = productRootEl || this.productRootEl;
          // Check the corresponding sticky radio
          const radio = this.$root.querySelector(`input[name="id"][value="${variant.id}"]`);
          if (radio) radio.checked = true;
          // Update price and bar
          if (this.$refs.variantPrice) {
            this.$refs.variantPrice.innerHTML = this.formatMoney(variant.price);
          }
          // Update availability from main variant
          this.stickyVariantAvailable = Boolean(variant.available);
          this.updateShippingBar();
        });
      },
      get stickyAddToCartText() {
        try {
          if (this.loading) return window.theme.strings.loading;
          if (this.stickyVariantAvailable) return window.theme.strings.addToCart;
          return window.theme.strings.soldOut;
        } catch (e) {
          return this.stickyVariantAvailable ? '{{ "products.product.add_to_cart" | t }}' : '{{ "products.product.sold_out" | t }}';
        }
      },

      formatMoney(cents) {
        if (typeof Shopify !== 'undefined' && typeof Shopify.formatMoney === 'function') {
          return Shopify.formatMoney(cents, this.moneyFormat);
        }
        const amount = (cents / 100).toFixed(2);
        // Basic fallback: replace {{amount}} or {{ amount }} in format string
        return (this.moneyFormat || '${{amount}}').replace(/\{\{\s*amount\s*\}\}/g, amount);
      },

      updateShippingBar() {
        // If already qualified based on current cart, show qualified text and stop.
        if (this.cartValue >= this.freeShippingThreshold) {
          this.$refs.freeDeliveryText.innerHTML = this.shippingBarTexts.qualified;
          // Progress is 100% when already qualified
          if (this.$refs.freeDeliveryProgress) {
            this.$refs.freeDeliveryProgress.style.width = '100%';
          }
          return;
        }

        // Determine selected variant price (cents) from the checked radio input
        const selected = this.$root.querySelector('input[name="id"]:checked');
        const variantPrice = selected ? parseInt(selected.dataset.price || '0', 10) : 0;
        const prospectiveTotal = this.cartValue + variantPrice;
        // Update progress bar based on cart + selected variant vs threshold
        if (this.$refs.freeDeliveryProgress && this.freeShippingThreshold > 0) {
          let fraction = prospectiveTotal / this.freeShippingThreshold;
          fraction = Math.max(0, Math.min(1, fraction));
          // round for stability in the transition
          const rounded = Math.round(fraction * 10000) / 10000;
          this.$refs.freeDeliveryProgress.style.transform = `scaleX(${rounded})`;
        }

        // If adding the selected variant qualifies for free shipping, show addToQualify
        if (prospectiveTotal >= this.freeShippingThreshold) {
          this.$refs.freeDeliveryText.innerHTML = this.shippingBarTexts.addToQualify;
          return;
        }

        // Otherwise, show how much this item gets you closer (the item price)
        const formattedItemPrice = this.formatMoney(variantPrice);
        this.$refs.freeDeliveryText.innerHTML = this.shippingBarTexts.getCloser.replace('[[price]]', formattedItemPrice);
      },

      onStickyVariantChange(event) {
        // Update text and progress
        this.updateShippingBar();
        // Update sticky button price text
        const selected = this.$root.querySelector('input[name="id"]:checked');
        const variantPrice = selected ? parseInt(selected.dataset.price || '0', 10) : 0;
        if (this.$refs.variantPrice) {
          this.$refs.variantPrice.innerHTML = this.formatMoney(variantPrice);
        }
        // Update availability from dataset if present (fallback true)
        this.stickyVariantAvailable = selected ? (selected.dataset.available ? selected.dataset.available === 'true' : true) : this.stickyVariantAvailable;
        // Inform the main product to change its variant, if possible
        const variantId = selected ? selected.value : null;
        // Ensure we have a reference to the main product root before dispatching
        if (!this.productRootEl) {
          this.productRootEl =
            document.querySelector('data-island[data-product-root][x-data^=\"Product\" ]') ||
            document.querySelector('[data-product-root]') ||
            null;
        }
        if (variantId && this.productRootEl) {
          this.productRootEl.dispatchEvent(new CustomEvent('theme:change:variant', {
            detail: { variantId: Number(variantId) }
          }));
        }
      },

      submitStickyForm(evt) {
        if (evt && typeof evt.preventDefault === 'function') evt.preventDefault();
        if (!this.$refs.stickyForm) return;
        this.loading = true;
        this.cartAddErrorMessage = null;

        const formData = new FormData(this.$refs.stickyForm);
        // Request sections in add-to-cart response (preferred path used by main product form)
        const sectionsList = 'cart-items,cart-footer,cart-item-count,cart-live-region';
        formData.append('sections', sectionsList);
        formData.append('sections_url', window.location.pathname);

        const config = {
          method: 'POST',
          headers: {
            'X-Requested-With': 'XMLHttpRequest',
            'Accept': 'application/json'
          },
          body: formData,
          credentials: 'same-origin'
        };

        // 1) Add to cart
        fetch(`${theme.routes.cart_add_url}`, config)
          .then(async (res) => {
            const contentType = res.headers.get('content-type') || '';
            if (contentType.includes('application/json') || contentType.includes('application/javascript')) {
              return res.json();
            }
            // Fallback: treat non-JSON as error-like response
            const text = await res.text();
            throw new Error('Non-JSON response from cart add');
          })
          .then((addedItem) => {
            this.loading = false;
            if (addedItem && addedItem.status) {
              const errors = addedItem.errors || addedItem.description;
              const message = addedItem.description || addedItem.message;
              this.cartAddErrorMessage = message || (window.theme && window.theme.strings ? window.theme.strings.cartError : 'Error adding to cart');
              // Surface error event similar to main product
              document.dispatchEvent(
                new CustomEvent('theme:product:error:add-to-cart', {
                  detail: {
                    productRootEl: this.productRootEl,
                    formEl: this.$refs.stickyForm,
                    errors,
                    message
                  }
                })
              );
              return;
            }
            // Preferred: if add response already includes sections, use them
            const hasSections = addedItem && addedItem.sections && typeof addedItem.sections === 'object';
            const dispatchWithSections = (sectionsObj) => {
              try {
                if (this.$store && this.$store.modals && typeof this.$store.modals.open === 'function') {
                  this.$store.modals.open('cart');
                }
              } catch (e) {}
              const response = {
                sections: sectionsObj,
                key: addedItem && addedItem.key ? addedItem.key : undefined,
                variant_id: addedItem && (addedItem.variant_id || addedItem.id) ? (addedItem.variant_id || addedItem.id) : undefined
              };
              const evt = new CustomEvent('shapes:cart:afteradditem', {
                bubbles: true,
                detail: { response, sourceId: 'sticky-atc-form' }
              });
              document.body.dispatchEvent(evt);
              window.dispatchEvent(evt);
            };
            if (hasSections) {
              dispatchWithSections(addedItem.sections);
              return;
            }
            // Fallback: fetch fresh sections via Sections Rendering API
            const sectionsUrl = `${window.location.pathname}?sections=${encodeURIComponent(sectionsList)}`;
            return fetch(sectionsUrl, {
              headers: { 'Accept': 'application/json', 'X-Requested-With': 'XMLHttpRequest' },
              credentials: 'same-origin'
            })
              .then((res) => res.json())
              .then((sectionsJSON) => dispatchWithSections(sectionsJSON));
          })
          .catch((error) => {
            this.loading = false;
            console.error(error);
            // Best-effort: still try to open drawer so user sees cart state
            try {
              this.$store?.modals?.open('cart');
            } catch (e) {}
          });
      }
    }));
  });
</script>

{% stylesheet %}
  .sticky-atc {
    --border-and-text-colour: #3f062a;
    --color-scheme-secondary-background: 255, 255, 255 !important;
    --color-scheme-secondary-text: 63, 6, 42 !important;
    --color-button-shadow: var(--color-scheme-accent-1) !important;
    display: grid;
    gap: 1rem;
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 1999999;
    padding-inline: 0.75rem;
    padding-block: 1.5rem;
    width: 100%;
    background-color: white;
    color: var(--border-and-text-colour);
    border: 3px solid var(--border-and-text-colour);
    border-bottom: 0px;
    border-top-left-radius: 0.375rem;
    border-top-right-radius: 0.375rem;
    filter: drop-shadow(0 -4px 4px rgba(0, 0, 0, 0.15));
  }

  .sticky-atc__free-delivery-bar {
    display: grid;
    justify-content: center;
    gap: 0.75rem;
  }
  .sticky-atc__bar {
    width: 20rem;
    height: 0.5rem;
    border-radius: 999rem;
    background-color: #ffeef9;
    position: relative;
    overflow: clip;
  }

  .sticky-atc__bar-inner {
    position: absolute;
    top: 0;
    left: 0;
    background-color: #3f062a;
    width: 100%;
    transform-origin: left center;
    transform: scaleX(0);
    transition: transform 0.45s cubic-bezier(0.22, 1, 0.36, 1);
    will-change: transform;
    border-radius: calc(infinity * 1px);
    height: 100%;
  }

  .sticky-atc__free-delivery-text {
    font-weight: 600;
    text-align: center;
  }

  .sticky-atc__form {
    display: grid;
    gap: 0.625rem;
  }

  .sticky-atc__variants {
    display: flex;
    gap: 0.625rem;
    /* row-gap: 0.325rem; */
    flex-wrap: wrap;
    justify-content: center;
  }

  .sticky-atc__variant {
    --text-colour: #3f062a;
    --background-color: #f2f2f2;
    --price-per-item-color: rgba(0, 0, 0, 0.3);

    display: flex;
    flex-direction: column;
    flex-grow: 1;
    flex-basis: calc(33% - 0.625rem);
    text-align: center;
    padding-inline: 1rem;
    padding-block: 0.5rem;
    border-radius: 999rem;
    text-transform: uppercase;
    justify-content: center;
    white-space: nowrap;

    background-color: var(--background-color);
    color: var(--text-colour);

    input {
      display: none;
    }

    &:has(:checked) {
      --text-colour: #eeeeee;
      --background-color: #3f062a;
      --price-per-item-color: rgba(255, 255, 255, 0.6);
    }
  }

  .sticky-atc__variant-title {
    font-weight: 600;
    font-size: 0.875rem;
  }

  .sticky-atc__variant-price-per-item {
    font-size: 0.75rem;
    color: var(--price-per-item-color);
  }

  .sticky-atc__buttons {
    display: flex;
    align-items: start;
    gap: 0.625rem;
  }

  .add-to-cart-btn .push-btn__surface {
    font-weight: 700;
  }

  .add-to-cart-btn__price {
    font-weight: 600;
    opacity: 60%;
  }

  @media (width >= 990px) {
    .sticky-atc {
      display: none;
    }
  }
{% endstylesheet %}
